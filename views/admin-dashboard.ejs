<div class="row mb-4">
  <div class="col-md-12">
    <h1>Admin Dashboard</h1>
    <p class="lead">Welcome, <%= user.full_name || user.username %>!</p>
  </div>
</div>

<div class="row mb-4">
  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Manage Rooms</h5>
        <p class="card-text">Add, edit, or delete rooms.</p>
        <a href="/admin/rooms" class="btn btn-primary">Manage Rooms</a>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Manage Users</h5>
        <p class="card-text">Add, edit, or delete user accounts.</p>
        <a href="/admin/users" class="btn btn-primary">Manage Users</a>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Manage Bookings</h5>
        <p class="card-text">View and manage all room bookings.</p>
        <a href="/admin/bookings" class="btn btn-primary">Manage Bookings</a>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">System Statistics</h5>
      </div>
      <div class="card-body">
        <div id="stats-container" class="row">
          <div class="col-md-4">
            <div class="card bg-primary text-white mb-4">
              <div class="card-body">
                <h5 class="card-title">Total Rooms</h5>
                <h2 class="display-4" id="total-rooms">...</h2>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card bg-success text-white mb-4">
              <div class="card-body">
                <h5 class="card-title">Total Users</h5>
                <h2 class="display-4" id="total-users">...</h2>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card bg-info text-white mb-4">
              <div class="card-body">
                <h5 class="card-title">Active Bookings</h5>
                <h2 class="display-4" id="active-bookings">...</h2>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Fetch room count
    fetch('/api/rooms')
      .then(response => response.json())
      .then(data => {
        document.getElementById('total-rooms').textContent = data.length;
      })
      .catch(error => {
        console.error('Error fetching rooms:', error);
        document.getElementById('total-rooms').textContent = 'Error';
      });
    
    // Fetch user count (admin only)
    fetch('/api/users')
      .then(response => response.json())
      .then(data => {
        document.getElementById('total-users').textContent = data.length;
      })
      .catch(error => {
        console.error('Error fetching users:', error);
        document.getElementById('total-users').textContent = 'Error';
      });
    
    // Fetch active bookings count
    fetch('/api/bookings')
      .then(response => response.json())
      .then(data => {
        const activeBookings = data.filter(booking => 
          booking.status !== 'cancelled' && 
          new Date(booking.end_time) >= new Date()
        );
        document.getElementById('active-bookings').textContent = activeBookings.length;
      })
      .catch(error => {
        console.error('Error fetching bookings:', error);
        document.getElementById('active-bookings').textContent = 'Error';
      });
  });
</script>