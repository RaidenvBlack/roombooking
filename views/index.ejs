<div class="row">
  <div class="col-md-12 text-center mb-5">
    <h1 class="display-4">Welcome to Room Booking System</h1>
    <p class="lead">Easily book rooms for meetings, events, and more.</p>
    <% if (!user) { %>
      <div class="mt-4">
        <a href="/login" class="btn btn-primary me-2">Login</a>
        <a href="/register" class="btn btn-outline-primary">Register</a>
      </div>
    <% } else { %>
      <div class="mt-4">
        <a href="/dashboard" class="btn btn-primary">Go to Dashboard</a>
      </div>
    <% } %>
  </div>
</div>

<div class="row">
  <div class="col-md-4 mb-4">
    <div class="card h-100">
      <div class="card-body text-center">
        <h3 class="card-title">Easy Booking</h3>
        <p class="card-text">Book rooms with just a few clicks. View availability in real-time and make reservations instantly.</p>
      </div>
    </div>
  </div>
  <div class="col-md-4 mb-4">
    <div class="card h-100">
      <div class="card-body text-center">
        <h3 class="card-title">Calendar View</h3>
        <p class="card-text">See all your bookings in a convenient calendar view. Easily manage and modify your reservations.</p>
      </div>
    </div>
  </div>
  <div class="col-md-4 mb-4">
    <div class="card h-100">
      <div class="card-body text-center">
        <h3 class="card-title">Room Details</h3>
        <p class="card-text">View detailed information about each room including capacity, location, and available equipment.</p>
      </div>
    </div>
  </div>
</div>

<div class="row mt-5">
  <div class="col-md-12">
    <h2 class="text-center mb-4">Featured Rooms</h2>
  </div>
</div>

<div class="row">
  <div class="col-md-4 mb-4">
    <div class="card">
      <img src="https://via.placeholder.com/300x200?text=Conference+Room" class="card-img-top" alt="Conference Room">
      <div class="card-body">
        <h5 class="card-title">Conference Room A</h5>
        <p class="card-text">Large conference room with projector and whiteboard. Capacity: 20 people.</p>
        <% if (user) { %>
          <a href="/rooms/1" class="btn btn-primary">View Details</a>
        <% } else { %>
          <a href="/login" class="btn btn-primary">Login to Book</a>
        <% } %>
      </div>
    </div>
  </div>
  <div class="col-md-4 mb-4">
    <div class="card">
      <img src="https://via.placeholder.com/300x200?text=Meeting+Room" class="card-img-top" alt="Meeting Room">
      <div class="card-body">
        <h5 class="card-title">Meeting Room B</h5>
        <p class="card-text">Small meeting room with TV. Capacity: 8 people.</p>
        <% if (user) { %>
          <a href="/rooms/2" class="btn btn-primary">View Details</a>
        <% } else { %>
          <a href="/login" class="btn btn-primary">Login to Book</a>
        <% } %>
      </div>
    </div>
  </div>
  <div class="col-md-4 mb-4">
    <div class="card">
      <img src="https://via.placeholder.com/300x200?text=Auditorium" class="card-img-top" alt="Auditorium">
      <div class="card-body">
        <h5 class="card-title">Auditorium</h5>
        <p class="card-text">Large auditorium with stage and AV equipment. Capacity: 100 people.</p>
        <% if (user) { %>
          <a href="/rooms/3" class="btn btn-primary">View Details</a>
        <% } else { %>
          <a href="/login" class="btn btn-primary">Login to Book</a>
        <% } %>
      </div>
    </div>
  </div>
</div>